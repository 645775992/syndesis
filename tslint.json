{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "**/config/**/*.js",
      "**/node_modules/**/*.ts",
      "**/coverage/lcov-report/*.js",
      "**/.jest/**/*",
      "**/.storybook/**/*",
      "**/*.test.tsx",
      "*.json",
      "**/*.json"
    ]
  },
  "rules": {
    "no-implicit-dependencies": true
  }
}
